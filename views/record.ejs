    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="calender.css" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar/main.min.css" rel="stylesheet">
    <style>
        #s_fullcalendar {
