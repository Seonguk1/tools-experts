<div style="width: 100%; height: 844px; background-color: #2d2d2d;">
    <div style="width: 296px; height: 550px; background-color: #424242; justify-content: right; padding-top: 20px; border-radius: 0 0 0 10px;" id="hamburger" class="modal">
        <div style="font-family: Pretendard Variable;
        font-size: 18px;
        font-weight: 600;
        line-height: 14px;
        letter-spacing: -0.5px;
        text-underline-position: from-font;
        text-decoration-skip-ink: none;
        ">
        <div onclick="location.href='/information';" style="margin-top: 7px; margin-left: 23px; color: #D9D9D9; ">
            나의 러닝프로필
        </div>
        <div onclick="location.href='/friends';" style="margin-top: 22px; margin-left: 23px; color: #D9D9D9;">
                나의 러닝메이트
            </div>
            <div onclick="location.href='/course';"style="margin-top: 22px; margin-left: 23px; color: #D9D9D9;">
                러닝코스
            </div>
            <div onclick="location.href='/community';" style="margin-top: 22px; margin-left: 23px; color: #D9D9D9;">
                게시판
            </div>
        </div>
        <div style="display: flex; justify-content: center;">
            <img src="images/Line 3.png" alt="" style="margin-top: 35px;">
        </div>
        <div style="font-family: Pretendard Variable;
        font-size: 18px;
        font-weight: 600;
        line-height: 14px;
        letter-spacing: -0.5px;
        text-underline-position: from-font;
        text-decoration-skip-ink: none;
        ">
            <div onclick="location.href='/record';" style="margin-top: 35px; margin-left: 23px; color: #D9D9D9;">
                나의 러닝기록
            </div>
            <div onclick="location.href='/gps';" style="margin-top: 22px; margin-left: 23px; color: #D9D9D9;">
                GPS
            </div>
        </div>
        <div style="display: flex; justify-content: center;">
            <img src="images/Line 3.png" alt="" style="margin-top: 35px;">
        </div>
        <div style="font-family: Pretendard Variable;
        font-size: 18px;
        font-weight: 600;
        line-height: 14px;
        letter-spacing: -0.5px;
        text-underline-position: from-font;
        text-decoration-skip-ink: none;
        ">
            <div onclick="location.href='/setting';"style="margin-top: 35px; margin-left: 23px; color: #D9D9D9;">
                설정
            </div>
            <div onclick="location.href='/login';"style="margin-top: 22px; margin-left: 23px; color: #D9D9D9;">
                로그아웃
            </div>
        </div>
    </div>
    <nav>
        <div class="comunity_nav">
            <div style="color: #ffffff; border-bottom: solid #747474 2px; cursor: default;" onclick="location.href='/friends';">나의 러닝메이트</div>
            <div style="cursor: default;" onclick="location.href='/course';">러닝 코스</div>
            <div style="cursor: default;" onclick="location.href='/community';">게시판</div>
        </div>
    </nav>
    <section>
        <div style="padding-top: 25px;">
            <div class="comunity1_section1">
                <div style="width: 123px; height: 98px; border-radius: 10px; background-color: #D6FFF8; display: flex; justify-content: center; align-items: center;">
                    <img src="images/Group 32.png" alt="">
                </div>
                <div style="font-size: 20px; font-weight: 600; color: #FFFFFF;">
                    <div>끝까지 달리는 러너</div>
                    <div>
                        <span style="font-size: 24px; font-weight: 700; color: #66FFE3;"><%= locals.nickname %></span> 님,<br>
                        반가워요!
                    </div>
                </div>
            </div>
            <div style="display: flex; justify-content: space-between; padding-left: 20px; padding-right: 20px; padding-top: 30px;">
                <div style="font-size: 20px; font-weight: 600; color: #CAFFF7;">나의 러닝메이트</div>
                <div style="color: #E4F2F0; font-size: 14px;" onclick="location.href='/friends/friendslist';">더보기 ></div>
            </div>
            <div style="display: flex; flex-wrap: wrap; gap: 10px; margin-left: 20px; margin-right: 20px; margin-top: 15px;">
                <% if (friendsList && friendsList.length > 0) { %>
                    <% friendsList.slice(0, 8).forEach(friend => { %> <!-- 최대 8명만 표시 -->
                        <div class="comunity1_article1" style="width: 48%; background-color: #5F6463; padding: 10px; border-radius: 10px; box-sizing: border-box;">
                            <div style="display: flex; align-items: center; gap: 10px;">
                                <div style="width: 28px; height: 28px; display: flex; align-items: center;">
                                    <img src="images/User_cicrle_light.png" alt="">
                                </div>
                                <div style="color: #66FFE3;"><%= friend.nickname %></div>
                            </div>
                            <div style="color: #CAFFF7; text-align: right;"><%= friend.temperature %></div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div style="color: #ffffff; text-align: center; width: 100%;">추가된 친구가 없습니다.</div>
                <% } %>
            </div>
            <div style="font-size: 20px; font-weight: 600; margin-left: 20px; margin-top: 20px; color: #CAFFF7;">러닝메이트 추가하기</div>
            <div style="display: flex; justify-content: space-between; margin-left: 20px; margin-right: 20px; margin-top: 20px;">
                <div class="comunity1_article2" onclick="location.href='/friends/add'">
                    <div>러닝메이트 찾기</div>
                    <div style="display: flex; justify-content: right;">
                        <img src="images/Vector 450.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
